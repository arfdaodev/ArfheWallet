{
    "manifest_version": 3,
    "name": "Arfhe Wallet",
    "icons": {
       "32": "images/icon32.png",
        "48":"images/icon48.png"
    },
    "version" :  "1.0.0",
    "background": { 
        "service_worker": "service-worker.js",
        "type": "module"     
    },
    "action": { 
        "default_popup": "index.html"
    },
    
    "permissions": [
        "scripting"
    ],
    "host_permissions":[
      "http://*/*",
      "https://*/*"
  
    ]
}